{
  "name": "vcss.css",
  "version": "0.1.3",
  "description": "Minimal and semantic CSS library",
  "scripts": {
    "clear:dist": "rm -rf dist",
    "clear:docs": "rm -rf docs",
    "clear": "npm run clear:dist && npm run clear:docs",
    "make": "node-sass -q scss/vcss.scss -o dist",
    "pretty": "prettier -w dist/vcss.css",
    "minify": "uglifycss dist/vcss.css > dist/vcss-min.css",
    "update": "cp dist/vcss.css docs/css/build",
    "build": "npm run build:app && npm run make && npm run pretty && npm run minify && npm run update",
    "build:app": "npm run clear && waveorb build && mv dist docs",
    "serve": "npm run clear:css && npm run build:css && concurrently -n ğŸ”¥,ğŸ’— \"npm run watch:app\" \"npm run watch:css\"",
    "watch:app": "WAVEORB_PORT=7000 nodemon -e js,mjs,json,yml,css,md -i dist -x waveorb serve",
    "watch:css": "node-sass -w -q scss/vcss.scss -o app/assets/css/build/",
    "build:css": "node-sass -q scss/vcss.scss -o app/assets/css/build/",
    "clear:css": "rm -rf app/assets/css/build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eldoy/vcss.git"
  },
  "author": "Vidar EldÃ¸y <vidar@eldoy.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eldoy/vcss/issues"
  },
  "homepage": "https://github.com/eldoy/vcss#readme",
  "devDependencies": {
    "concurrently": "^5.3.0",
    "node-sass": "^5.0.0",
    "prettier": "^2.2.1",
    "tomarkup": "^0.1.1",
    "uglifycss": "0.0.29"
  },
  "dependencies": {}
}
